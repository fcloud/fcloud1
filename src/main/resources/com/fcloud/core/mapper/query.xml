<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.query">

    <sql id="queryCriteriaSql">

        <foreach item="crit" collection="criterions">
            and ${crit.name}
            ${crit.op} #{crit.value}
        </foreach>
    </sql>

    <!--

                <when test="crit.op.equals('in')">
                    in (<foreach collection="crit.value" item="val">#{val}</foreach>)
                </when>
                <when test="crit.op.equals('between')">
                    between #{crit.value} and #{crit.value}
                </when>
                <otherwise>
                    ${crit.op} #{crit.value}
                </otherwise>
    -->
</mapper>